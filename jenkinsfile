pipeline{
    agent any
    tools {
        nodejs 'nodejs'
    }
     stages{
     stage('clone'){
        steps{ git 'https://github.com/marie-natalie/gallery.git'}
     }
     stage('installing dependencies'){
        steps{ sh 'npm install'}
     }
     stage(test){
        steps{ sh 'npm test'}
     }
     }
        post {
        success {
            script {
                // Send a Slack notification on success
                slackSend(
                    color: 'good', // green color for success
                    message: "Deployment was successful!",
                    channel: '#your-channel' // specify the Slack channel
                )
            }
        }
    }
}